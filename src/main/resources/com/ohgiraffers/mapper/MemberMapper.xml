<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.mapper.MemberMapper">

    <resultMap id="MemberResultMap" type="com.ohgiraffers.model.DTO.MemberDTO">
        <id property="id" column="id"/>
        <result property="name" column="member_name"/>
        <result property="age" column="member_age"/>
        <result property="pwd" column="password"/>
        <result property="mileage" column="member_mileage"/>
        <result property="login" column="member_login"/>
    </resultMap>

    <resultMap id="idCheck" type="com.ohgiraffers.model.DTO.MemberDTO">
        <id property="id" column="id"/>
    </resultMap>

    <resultMap id="loginCheck" type="com.ohgiraffers.model.DTO.MemberDTO">
        <id property="id" column="id"/>
        <result property="pwd" column="password"/>
    </resultMap>

    <insert id="insertMember" parameterType="com.ohgiraffers.model.DTO.MemberDTO">
        INSERT INTO tbl_member(
        member_name
        ,member_age
        ,id
        ,password
        )
        VALUES (
        #{name}
        ,#{age}
        ,#{id}
        ,#{pwd}
        )
    </insert>

    <insert id="insertNonMember" parameterType="com.ohgiraffers.model.DTO.MemberDTO">
        INSERT INTO tbl_member(
                                id
                                ,password
                                )
        VALUES (
        #{id}
        ,#{pwd}
        )
    </insert>

    <select id="signUpIdCheck" resultMap="idCheck">
    SELECT id
    FROM tbl_member
    WHERE id = #{ id }
    </select>

    <select id="loginCheck" resultMap="loginCheck">
        SELECT id, password
        FROM tbl_member
        WHERE id = #{ id }
          AND password = #{ pwd }
    </select>

    <select id="nowLoginMember" resultMap="MemberResultMap">
        SELECT id, member_name, member_age, password, member_mileage, member_login
          FROM tbl_member
        WHERE id = #{ id }
    </select>
</mapper>